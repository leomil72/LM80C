10 REM SPRITES & SOUND DEMO
20 SCREEN 1:RESTORE 30
30 DATA 24,60,126,219,255,36,90,165
40 MS$="ALERT!":XS=0:YS=13:XM=1:YM=-1
50 FOR I=0 TO 7:READ A:VPOKE &H3800+I,A:NEXT I
60 DIM X(32):C=1:FOR I=0 TO 31
70 VPOKE &H1B00+(I*4),I*6:VPOKE &H1B00+(I*4)+1,(I*4)+16
80 VPOKE &H1B00+(I*4)+2,0:VPOKE &H1B00+(I*4)+3,C
90 C=C+1:IF C=5 THEN C=6
100 IF C>15 THEN C=1
110 X(I)=8:NEXT I
120 RESTORE 270:VOLUME 0,15
130 FOR I=0 TO 31
140 LOCATE XS,YS:PRINT MS$;
150 TX=VPEEK(&H1B00+(I*4)+1)+X(I)
160 IF TX>8 AND TX<248 THEN 180
170 X(I)=-X(I):TX=TX+X(I)
180 VPOKE &H1B00+(I*4)+1,TX
190 READ S1:IF S1=0 THEN RESTORE 270:GOTO 190
200 SOUND 1,S1,0
210 LOCATE XS,YS:PRINT "      ";
220 XS=XS+XM
230 IF XS<0 OR XS>25 THEN XM=-XM:XS=XS+XM
240 YS=YS+YM
250 IF YS<0 OR YS>23 THEN YM=-YM:YS=YS+YM
260 NEXT I:GOTO 130
270 DATA 1000,2000,3000,4000
280 DATA 500,1500,2500,3500
290 DATA 0
