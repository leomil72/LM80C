10 REM SPRITES IN BASIC - DEMO
15 SCREEN 1
20 DATA 24,60,126,219,255,36,90,165
30 FOR I=0 TO 7:READ A:VPOKE &H3800+I,A:NEXT I
40 DIM X(32):C=1:FOR I=0 TO 31
50 VPOKE &H1B00+(I*4),I*6:VPOKE &H1B00+(I*4)+1,(I*4)+16
60 VPOKE &H1B00+(I*4)+2,0:VPOKE &H1B00+(I*4)+3,C
70 C=C+1:IF C=5 THEN C=6
80 IF C>15 THEN C=1
90 X(I)=8:NEXT I
100 FOR I=0 TO 31
110 TX=VPEEK(&H1B00+(I*4)+1)+X(I)
120 IF TX>8 AND TX<248 THEN 140
130 X(I)=-X(I):TX=TX+X(I)
140 VPOKE &H1B00+(I*4)+1,TX
150 NEXT I:GOTO 100
